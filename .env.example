# Database
DATABASE_URL=postgresql://seouser:seopass@localhost:5432/seo_audit

# Redis (for BullMQ)
# Option 1: Use REDIS_URL (Railway, Render, production)
# REDIS_URL=redis://default:password@host:6379
# Option 2: Use separate host/port/password (local development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server
PORT=3000
NODE_ENV=development

# Google PageSpeed Insights API
# Get your free API key from: https://developers.google.com/speed/docs/insights/v5/get-started
GOOGLE_PAGESPEED_API_KEY=your_api_key_here

# Email (optional, for notifications)
# Sign up at https://resend.com for free tier
RESEND_API_KEY=

# Security
JWT_SECRET=change_this_to_a_random_secret_key_in_production
API_RATE_LIMIT=10

# Crawler Configuration
CRAWLER_MAX_PAGES=50
CRAWLER_DEPTH=3
CRAWLER_DELAY_MS=500
CRAWLER_TIMEOUT_MS=10000
CRAWLER_CONCURRENCY=5

# Logging
LOG_LEVEL=info
